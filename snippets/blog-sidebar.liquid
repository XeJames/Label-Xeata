{% comment %}
  Recent blog posts
{% endcomment %}
<h4 class="">{% comment %}ly_i18n_replace_for_[ 'blogs.sidebar.recent_articles' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.sidebar.recent_articles' | t }}{% endcapture %}{% include 'ly-static-string' with '3885727' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h4>
<ul class="no-bullets">
  {% for article in blogs[blog.handle].articles limit:6 %}
    <li>
      <a href="{{ article.url }}" class="feature-copy">{% comment %}ly_code_replace_for_[ article.title ]_begin{% endcomment %}{% include 'ly-title' with article %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a>
      <br>
      <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>
    </li>
  {% endfor %}
</ul>

{% comment %}
  Blog tags
{% endcomment %}
{% if blog.all_tags.size > 0 %}
  <h4 class="tags">{% comment %}ly_i18n_replace_for_[ 'blogs.sidebar.categories' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.sidebar.categories' | t }}{% endcapture %}{% include 'ly-static-string' with '3885728' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h4>
  <ul class="no-bullets tags-list">
    {% if current_tags  %}
      <li><a href='{{ blogs[blog.handle].url }}'>{% comment %}ly_i18n_replace_for_[ 'blogs.sidebar.all_tags' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.sidebar.all_tags' | t }}{% endcapture %}{% include 'ly-static-string' with '3885729' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a></li>
    {% else %}
      <li>{% comment %}ly_i18n_replace_for_[ 'blogs.sidebar.all_tags' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.sidebar.all_tags' | t }}{% endcapture %}{% include 'ly-static-string' with '3885729' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</li>
    {% endif %}
    {% for tag in blog.all_tags %}
      {% if current_tags contains tag %}
      <li>{{ tag }}</li>
      {% else %}
      <li>{{ tag | link_to_tag: tag }}</li>
      {% endif %}
    {% endfor %}
  </ul>
{% endif %}

<p class="rss-link">
  <a href="{{ shop.url }}{{ blogs[blog.handle].url }}.atom" target="_blank">{% comment %}ly_i18n_replace_for_[ 'blogs.sidebar.rss' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.sidebar.rss' | t }}{% endcapture %}{% include 'ly-static-string' with '3885730' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a>
</p>
