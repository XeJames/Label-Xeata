{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<!-- /snippets/section_featured-collection.liquid -->

<section class="featured_collections">
   
    <div class="wrapper">

      <div class="grid-uniform product-grid section-content">
        
        {% if settings.feature_collection_1 and settings.feature_collection_1 != '' %}
        {% assign collection_1 = collections[settings.feature_collection_1] %}
          <div class="grid__item sbs-image one-half medium-down--one-whole">
            <a href="{{ shop.url }}{{ collection_1.url }}">
              <div class="content">
                <div class="grid--full grid--table">
                  <div class="grid__item">
                    <div class="feature-copy-holder with-cta">
                      <h3 class="feature-image-overlay">
                          {% comment %}ly_code_replace_for_[ collection_1.title ]_begin{% endcomment %}{% include 'ly-title' with collection_1 %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}
                      </h3>
                    </div>
                    <div class="feature-image-cta btn">{% comment %}ly_new_settings_replace_for_[ settings.feature_collection_1_cta ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id3885822"] %}{% assign ly_translation = shop.metafields[namespace]["id3885822"] %}{% else %}{% assign ly_translation = settings.feature_collection_1_cta %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %} <span class="next-arrow"></span></div>
                  </div>
                </div> 
              </div>
    
              {% if collection_1.image %}
                <img src='{{ collection_1.image | img_url: '1024x1024' }}' />
              {% else %}
                <img src='{% comment %}ly_asset_replace_for_[ 'image_no_collection_image.jpg' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'image_no_collection_image.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}' />
              {% endif %}
            </a>
          </div>
        {% else %}
          {% include 'onboarding-featured-collections' %}
        {% endif %}
        
        {% if settings.feature_collection_2 and settings.feature_collection_2 != '' %}
        {% assign collection_2 = collections[settings.feature_collection_2] %}
          <div class="grid__item sbs-image one-half medium-down--one-whole">
            <a href="{{ shop.url }}{{ collection_2.url }}">
              <div class="content">
                <div class="grid--full grid--table">
                  <div class="grid__item">
                    <div class="feature-copy-holder with-cta">
                      <h3 class="feature-image-overlay">{% comment %}ly_code_replace_for_[ collection_2.title ]_begin{% endcomment %}{% include 'ly-title' with collection_2 %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h3>
                    </div>
                    <div class="feature-image-cta btn">{{ settings.feature_collection_2_cta }} <span class="next-arrow"></span></div>
                  </div>
                </div> 
              </div>
    
              {% if collection_2.image %}
                <img src='{{ collection_2.image | img_url: '1024x1024' }}' />
              {% else %}
                <img src='{% comment %}ly_asset_replace_for_[ 'image_no_collection_image.jpg' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'image_no_collection_image.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}' />
              {% endif %}
            </a>
          </div>
        {% else %}
          {% include 'onboarding-featured-collections' %}
        {% endif %}
  
      </div>
    </div>
</section>
