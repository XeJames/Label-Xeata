{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<!-- /snippets/header_logo.liquid -->
{% comment %}
  Use the uploaded logo from theme settings if enabled.
  Site name gets precedence with H1 tag on homepage, div on other pages.
{% endcomment %}

{% if template == 'index' %}
  
  <h1 class="site-header__logo {% unless settings.logo_use_image %} text-active {% endunless %}" itemscope itemtype="http://schema.org/Organization">
  <a href="/" itemprop="url" class="large-title ds_new_main_title"><ly-as-3885795>Always Connected</ly-as-3885795></a>
    
    
{% else %}
  
  <div class="h1 site-header__logo {% unless settings.logo_use_image %} text-active {% endunless %}" itemscope itemtype="http://schema.org/Organization">
  <a href="/"><img src="https://cdn.shopify.com/s/files/1/1156/5806/files/xeata-new-dark.png" alt="{{ langify_shop_name }}" itemprop="logo" style="width: 50%" ></a>
    
{% endif %}
    
  {% comment %}

  {% if settings.logo_use_image %}
    <a href="/" itemprop="url" class="site-header__logo-link">
      {% if settings.use_alternate_logo and  template == 'index' %}
        <img src="{% comment %}ly_asset_replace_for_[ 'logo-alternate.png' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'logo-alternate.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}<ly-as-3915694>" alt="</ly-as-3915694>{{ langify_shop_name }}<ly-as-3915695>" itemprop="logo"></ly-as-3915695>
      {% else %}
        <img src="{% comment %}ly_asset_replace_for_[ 'logo.png' | asset_url ]_begin{% endcomment %}{% assign ly_asset = 'logo.png' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" alt="{{ langify_shop_name }}" itemprop="logo">
      {% endif %}
    </a>
  {% else %}
  {% capture title_size %}{{ langify_shop_name | size }}{% endcapture %}
  {% assign title_size_count = title_size | plus: 0 %}
    <a href="/" itemprop="url" class="{% if title_size_count > 20 %}large-title{% endif %} {% if title_size_count < 7 %}small-title{% endif %}">{{ langify_shop_name }}</a>
  {% endif %}
    

    
    
     {% endcomment %}
    
    
  
{% if template == 'index' %}
  {% if settings.enable_hero_image and settings.logo_use_image == false %}
  <div class="hero-logo-border">
    <div class="inner"></div>
  </div>
  {% endif %}
  </h1>
{% else %}

  </div>
{% endif %}