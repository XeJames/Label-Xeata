  .drawer-nav > & {
    background-color: $colorDrawerBackground;
  }

  &:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: $gutter / 2;
    right: $gutter / 2;
  }

  .drawer-nav > &:last-child:after {
    display: none;
  }
  
  
}

// Login/logout links can't have a class on them, so style <a> element
.drawer-nav__item a {
  display: block;
}

.drawer-nav__item a,
.drawer-nav__toggle button {
  color: $colorDrawerNav;;
  padding: $gutter / 2;
  text-decoration: none;
  
  &:hover,
  &:active,
  &:focus {
    color: $colorDrawerAccent;
  }

}

.drawer-nav__item .drawer-nav__has-sublist a {
  &:hover,
  &:active,
  &:focus {
    color: $colorDrawerAccent;
  }
}

.drawer-nav__item.customer-item {
  &.first {
    margin-top: ($gutter/2);
  }
  a {
    padding-top: $gutter/4;
    padding-bottom: $gutter/4;
    color: $colorSecondary;
    &:hover,
    &:active,
    &:focus {
      color: $colorDrawerAccent;
    }
  }
}


.drawer-nav__item--active {
  color: $colorAccent;
}

.drawer-nav__has-sublist {
  display: table;
  width: 100%;
  
  .drawer-nav__link {
    display: table-cell;
    vertical-align: middle;
    width: 100%;
    .icon-arrow-down {
      float: right;
      font-size: 16px;
      padding-left: $gutter / 4;
      &:before {
        font-family: 'icons';
        content: '\e20b';
      }
    }
  }
  
  &.drawer-nav--expanded {
    .drawer-nav__link {
      .icon-arrow-down {
        &:before {
          font-family: 'icons';
          content: '\e20a';
        }
      }
    }
  }
}

.drawer-nav__toggle {
  display: table-cell;
  vertical-align: middle;
  width: 1%;
}

.drawer-nav__toggle-open {
  .drawer-nav--expanded & {
    display: none;
  }
}

.drawer-nav__toggle-close {
  display: none;

  .drawer-nav--expanded & {
    display: block;
  }
}

.drawer-nav__sublist {
  margin: 0;
  max-height: 0;
  visibility: hidden;
  overflow: hidden;
  transition: all 300ms cubic-bezier(0.57, 0.06, 0.05, 0.95);
  @include backface();

  .drawer-nav--expanded + & {
    visibility: visible;
    max-height: 700px;
    transition: all 700ms cubic-bezier(0.57, 0.06, 0.05, 0.95);
  }
  
  &.large-sublist {
    .drawer-nav--expanded + & {
      max-height: 1200px;
    }
    
  }
  
  .drawer-nav__item a {
    padding: ($gutter/3) 0 ($gutter/3) ($gutter/2);
  }
  
  .drawer-nav__item:after {
    top: 0;
    bottom: auto;
  }

  .drawer-nav__link {
    padding-left: $gutter;
    font-weight: normal;
    span {
      @include opacity(0.3);
      display: inline-block;
      margin-right: 8px;
    }
   
  }
}


